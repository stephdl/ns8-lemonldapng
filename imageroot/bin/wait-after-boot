set -e

# Redirect any output to the journal (stderr)
exec 1>&2

# wait after the file llng/var-conf/lmConf-1.json is created 
while [ ! -f /var/lib/llng/var-conf/lmConf-1.json ]; do
    sleep 1
    echo "waiting for /var/lib/llng/var-conf/lmConf-1.json"
done
